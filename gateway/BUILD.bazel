load("@npm//@bazel/typescript:index.bzl", "ts_library")
load("@npm//@bazel/jasmine:index.bzl", "jasmine_node_test")

package(default_visibility = ["//visibility:public"])

ts_library(
    name = "lib",
    srcs = glob(
        include = ["**/*.ts"],
        exclude = ["**/*.test.ts"],
    ),
    deps = [
        "@npm//@types/express",
        "@npm//@types/node",
        "@npm//express",
    ],
)

ts_library(
    name = "test_lib",
    srcs = glob(["*.test.ts"]),
    data = [
        "//:docker-compose.json",
    ],
    deps = [
        ":lib",
        "@npm//@types/axios",
        "@npm//@types/jasmine",
        "@npm//@types/node",
        "@npm//axios",
        "@npm//jasmine",
        "@npm//testcontainers",
    ],
)

jasmine_node_test(
    name = "test",
    templated_args = ["--bazel_patch_module_resolver"],
    deps = [":test_lib"],
)
